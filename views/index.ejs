<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Home Page</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" type="text/css" />
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" rel="stylesheet" />
        <link rel="stylesheet" href="/css/styles.css" />
        <link rel="stylesheet" href="/css/main.css"> 
    </head>
    <body>
        <!-- Navigation-->
        <nav class="class= navbar navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#" py-0>
                  <img src="\assets\img\rain-weather-svgrepo-com.svg" class="d-inline-block align-top" width="30" style="height: 2.5rem"  alt=" "/>
                  Weather Lungzx
                </a>
                <a class="btn btn-primary" href="#home">Home</a>
            </div>
        </nav>
        <section class="current-weather text-center bg-light">
          <div class ="container-fluid p-0">
              <h2 class="mt-0.5">Weather Today</h2>
                <div class = "justify-content-center">
                    <div style="display:inline-block;">
                      <div class="current-weather-item">
                            <img src= "\assets\img\flag-for-flag-philippines-svgrepo-com.svg" width="100" style="height: 20rem" /> 
                            <div class = "current-weather-text">
                              <div style="display:inline-block;"></div>
                                <h5><%=(weatherAPI['city'].name);%>, <%=(weatherAPI['city'].country);%></h5>
                                    <h9><%=(weatherAPI['city'].coord['lat']);%> °N, <%=(weatherAPI['city'].coord['lon']);%>°E</h9>
                                        <h9>Date: <%=(weatherJS['0'].forecast['0'].day);%></h9>
                                          <h9><%=(weatherJS['0'].forecast['0'].date);%> </h9> 
                                            <h9>temperature: <%=(weatherAPI['list'][0].main.temp);%> </h9>                       
                              </div>
                          </div>
                        </div>
                    </div> 
                  </div>

        <section class ="features-icons bg-light text-center ">
          <div class="grid-container">
            <h5 class="mt-0.2">This Week's Forecast</h5>
              <% let logo = (weatherJS['0'].forecast); %>
                <div class ="row"> 
                  <div class="col -lg-4">
                  <div style="display:inline-block;">
                    <% for (var i=0; i < logo.length; i++){ %>
                        <div class="card border-info mb-3" style="width: 10rem;">
                          <div class="card-header"><%= logo[i].shortday; %> </div>
                            <img class="card-img-top" src= <%= ("http://blob.weather.microsoft.com/static/weather4/en-us/" + logo[i].skycodeday + ".gif" ); %>  width="500px" style="height: 8rem"  alt="weather icon" />
                              <div class="card-body">
                                  <p class="card-text">
                                      <%= logo[i].date; %>
                                      <br> 
                                      Low: <%= logo[i].low; %>
                                      High: <%= logo[i].high; %>  
                                  </p>
                          </div>
                        </div>
                        <%}%>
                       </div>
                    </div>
                  </div>
            </section>

                          
                                          
           
    <p><%=  (weatherAPI['list'][0].dt_txt); %><%/*not finished*/%>
    <p><%=  (weatherAPI['list'][0].weather[0].icon); %><%/*not finished*/%>
   
    <p><%=  (Object.getOwnPropertyNames(weatherAPI)); %></p> <%/*gets property names*/%>
    <p><%=  (Object.getOwnPropertyNames(weatherJS)); %></p>
    <p><%/* = (weatherAPI.weather['0'].description); */%></p>
    <p><%=  (weatherJS['0'].location.name); %></p>
    <p><%=  (weatherJS['0'].location.imagerelativeurl); %></p>
    <p><%=  (weatherJS['0'].current.temperature); %></p>
    <p><%=  (weatherJS['0'].forecast['0'].shortday); %></p>
    <%= (weatherJS['0'].forecast)[0].skycodeday; %>

    <% let logo = (weatherJS['0'].forecast); %>
      <% for (var i=0; i< logo.length; i++){ %>
        <img src= <%= ("http://blob.weather.microsoft.com/static/weather4/en-us/" + logo[i].skycodeday + ".gif" ); %>
        <%}%>

        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="server.js"></script>
 
  </body>
</html>


                          
                                          
   

